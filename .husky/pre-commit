#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Check for formatting
echo "ğŸ” Checking formatting...";
pnpm format:check ||
(
  echo "âŒ Formatting errors detected. Please run 'pnpm format' and commit again.";
  false;
)

# Check for linting
echo "ğŸ” Checking linting...";
pnpm lint:check ||
(
  echo "âŒ Linting errors detected. Please run 'pnpm lint' and commit again.";
  false;
)

# Check for type errors
echo "ğŸ” Checking type errors...";
pnpm typecheck ||
(
  echo "âŒ Type errors detected. Please fix and commit again.";
  false;
)

# If we get here, all checks passed
echo "âœ… All checks passed. Ready to commit.";
